# RuleScribe v2 Environment Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here

# API Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Database Configuration (Auto-generated from Supabase)
DATABASE_URL=postgresql+asyncpg://postgres.your-project-ref:your-password@aws-0-us-west-1.pooler.supabase.com:6543/postgres

# AI Provider API Keys
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_API_KEY=your-google-ai-key-here

# AI Model Configuration
OPENAI_MODEL=gpt-4o
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
GOOGLE_MODEL=gemini-1.5-pro

# Vector Database (Qdrant) - Optional for local development
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your-qdrant-key

# Redis Configuration - Optional for caching
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,txt,md,docx